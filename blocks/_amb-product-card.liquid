{% # import schema from '../schemas/blocks/_product-card.js' %}

{% liquid
  assign product = closest.product
-%}

{% capture children %}
    {% # theme-check-disable %}
    {% content_for 'block', type: '_product-card-gallery', id: 'product-gallery', closest.product: product, variant: variant %}
    {% content_for 'block', type: 'product-title', id: 'product-title', closest.product: product, variant: variant %}
    {% content_for 'block', type: 'price', id: 'product-price', closest.product: product, variant: variant %}
    {% content_for 'block', type: 'amb-product-promotion-callout', id: 'product-callout', closest.product: product, variant: variant %}
    {% content_for 'block', type: 'swatches', id: 'swatches', closest.product: product, disable_click: true  %}

    {% if product.metafields.amb.show_other_options and product.has_only_default_variant == false %}
      {% content_for 'block', type: 'amb-extra-variant', id: 'product-extra-variant', closest.product: product%}
    {% endif %}

    {% if product.metafields.amb.extra_description != blank %}
      {% content_for 'block', type: 'amb-extra-description', id: 'product-extra-description', closest.product: product %}
    {% endif %}
    {% # theme-check-disable %}
{% endcapture %}

{% render 'product-card', children: children, product: product, variant: variant %}

{% schema %}
{
  "name": "t:names.product_card",
  "tag": null,
  "settings": [
    {
      "type": "paragraph",
      "content": "t:content.resource_reference_product_card"
    },
    {
      "type": "range",
      "id": "product_card_gap",
      "label": "t:settings.vertical_gap",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "default": 16
    },
    {
      "type": "checkbox",
      "id": "inherit_color_scheme",
      "label": "t:settings.inherit_color_scheme",
      "default": true
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:settings.color_scheme",
      "default": "scheme-1",
      "visible_if": "{{ block.settings.inherit_color_scheme == false }}"
    },
    {
      "type": "header",
      "content": "t:content.borders"
    },
    {
      "type": "select",
      "id": "border",
      "label": "t:settings.style",
      "options": [
        {
          "value": "none",
          "label": "t:options.none"
        },
        {
          "value": "solid",
          "label": "t:options.solid"
        }
      ],
      "default": "none"
    },
    {
      "type": "range",
      "id": "border_width",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:settings.thickness",
      "default": 1,
      "visible_if": "{{ block.settings.border != 'none' }}"
    },
    {
      "type": "range",
      "id": "border_opacity",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "t:settings.opacity",
      "default": 100,
      "visible_if": "{{ block.settings.border != 'none' }}"
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "t:settings.border_radius",
      "min": 0,
      "max": 32,
      "step": 1,
      "default": 0
    },
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "t:settings.top",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-inline-start",
      "label": "t:settings.left",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-inline-end",
      "label": "t:settings.right",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "default": 0
    }
  ]
}
{% endschema %}
